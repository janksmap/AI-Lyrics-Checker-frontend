{
    "manifest_version": 3,
    "name": "AI Lyric Checker",
    "version": "1.0",
    "description": "An AI Lyric Checker for Spotify",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://*.spotify.com/*"],
        "js": ["checkLyrics.js", "content.js"]
      }
    ]
  }
  